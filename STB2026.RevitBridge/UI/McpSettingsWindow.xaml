<Window x:Class="STB2026.RevitBridge.UI.McpSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="STB2026 ‚Äî A.I. Connector for Revit"
        Width="480" Height="440"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White"
        FontFamily="Segoe UI"
        FontSize="13">

    <Window.Resources>
        <!-- –°—Ç–∏–ª—å Toggle Switch (–∞–Ω–∞–ª–æ–≥ Nonica) -->
        <Style x:Key="ToggleSwitch" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="bg" Width="44" Height="22" CornerRadius="11"
                                    Background="#CCC" HorizontalAlignment="Left">
                                <Ellipse x:Name="dot" Width="18" Height="18" Fill="White"
                                         HorizontalAlignment="Left" Margin="2,0,0,0"/>
                            </Border>
                            <TextBlock Text="{TemplateBinding Content}" Margin="52,0,0,0"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#5B5FC7"/>
                                <Setter TargetName="dot" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="dot" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- –°—Ç–∞—Ç—É—Å –∏–∫–æ–Ω–∫–∏ -->
        <Style x:Key="StatusOk" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="StatusFail" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#C62828"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="StatusWarn" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E65100"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>     <!-- –ó–∞–≥–æ–ª–æ–≤–æ–∫ -->
            <RowDefinition Height="Auto"/>     <!-- –ü–æ–¥–∑–∞–≥–æ–ª–æ–≤–æ–∫ -->
            <RowDefinition Height="Auto"/>     <!-- –¢–∞–±—ã Auto/Manual -->
            <RowDefinition Height="*"/>        <!-- –ö–æ–Ω—Ç–µ–Ω—Ç —Ç–∞–±–∞ -->
            <RowDefinition Height="Auto"/>     <!-- –¢–æ–≥–ª—ã -->
            <RowDefinition Height="Auto"/>     <!-- –ö–Ω–æ–ø–∫–∏ -->
        </Grid.RowDefinitions>

        <!-- –ó–∞–≥–æ–ª–æ–≤–æ–∫ -->
        <TextBlock Grid.Row="0" Text="A.I. Connector for Revit" FontSize="18" FontWeight="SemiBold"/>
        <TextBlock Grid.Row="1" Text="üîó Connects Claude Desktop App or Cursor to Revit."
                   Foreground="#666" Margin="0,2,0,8"/>

        <!-- –¢–∞–±—ã Auto / Manual -->
        <TabControl x:Name="tabMode" Grid.Row="2" Grid.RowSpan="1" Height="Auto"
                    Margin="0,4,0,8" Background="White" BorderThickness="0">

            <!-- ‚ïê‚ïê‚ïê TAB: Auto ‚ïê‚ïê‚ïê -->
            <TabItem Header="     Auto     " FontSize="14" FontWeight="SemiBold">
                <StackPanel Margin="4,12,4,0">
                    <!-- Claude Desktop -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock x:Name="txtClaudeIcon" Style="{StaticResource StatusFail}" Text="‚úó " Width="22"/>
                        <TextBlock x:Name="txtClaudeStatus" Text="Claude Desktop App –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω."
                                   VerticalAlignment="Center"/>
                        <Button x:Name="btnSetupClaude" Content="–ü–æ–¥–∫–ª—é—á–∏—Ç—å" Margin="12,0,0,0"
                                Padding="10,2" FontSize="11" Visibility="Collapsed"
                                Click="BtnSetupClaude_Click"
                                Background="#5B5FC7" Foreground="White" BorderThickness="0"/>
                    </StackPanel>

                    <!-- Cursor -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock x:Name="txtCursorIcon" Style="{StaticResource StatusFail}" Text="‚úó " Width="22"/>
                        <TextBlock x:Name="txtCursorStatus" Text="Cursor –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω."
                                   VerticalAlignment="Center"/>
                        <Button x:Name="btnSetupCursor" Content="–ü–æ–¥–∫–ª—é—á–∏—Ç—å" Margin="12,0,0,0"
                                Padding="10,2" FontSize="11" Visibility="Collapsed"
                                Click="BtnSetupCursor_Click"
                                Background="#5B5FC7" Foreground="White" BorderThickness="0"/>
                    </StackPanel>

                    <!-- Claude Code -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock x:Name="txtCodeIcon" Style="{StaticResource StatusFail}" Text="‚úó " Width="22"/>
                        <TextBlock x:Name="txtCodeStatus" Text="Claude Code –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω."
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Pipe —Å—Ç–∞—Ç—É—Å -->
                    <Border Background="#F5F5F5" CornerRadius="4" Padding="8" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="txtPipeIcon" Text="‚ö°" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock x:Name="txtPipeStatus" Text="Named Pipe: –æ–∂–∏–¥–∞–Ω–∏–µ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è..."
                                       Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- –í–∞–∂–Ω–æ–µ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ -->
                    <Border Background="#FFF3E0" CornerRadius="4" Padding="8" Margin="0,10,0,0"
                            x:Name="pnlRestart" Visibility="Collapsed">
                        <TextBlock TextWrapping="Wrap" Foreground="#E65100">
                            <Run FontWeight="Bold">Important ‚Üí</Run>
                            <Run>–ü–µ—Ä–µ–∑–∞–ø—É—Å—Ç–∏—Ç–µ AI Desktop App (–∏–∫–æ–Ω–∫–∞ –≤ —Ç—Ä–µ–µ, —Ä—è–¥–æ–º —Å —á–∞—Å–∞–º–∏ Windows).</Run>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </TabItem>

            <!-- ‚ïê‚ïê‚ïê TAB: Manual ‚ïê‚ïê‚ïê -->
            <TabItem Header="    Manual    " FontSize="14" FontWeight="SemiBold">
                <StackPanel Margin="4,12,4,0">
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,8" Foreground="#666">
                        Copy+Paste in claude_desktop_config.json or mcp.json, and restart AI.
                    </TextBlock>

                    <Grid>
                        <TextBox x:Name="txtManualJson" IsReadOnly="True"
                                 FontFamily="Consolas" FontSize="11"
                                 Background="#F8F8F8" BorderBrush="#DDD"
                                 Padding="8" TextWrapping="Wrap"
                                 Height="130" VerticalScrollBarVisibility="Auto"/>
                        <Button Content="üìã Copy" HorizontalAlignment="Right" VerticalAlignment="Top"
                                Margin="0,4,4,0" Padding="8,4"
                                Click="BtnCopyJson_Click"
                                Background="#EEE" BorderThickness="1" BorderBrush="#CCC"/>
                    </Grid>

                    <TextBlock Margin="0,8,0,0" Foreground="#999" FontSize="11">
                        <Run>–ü—É—Ç—å –∫ –∫–æ–Ω—Ñ–∏–≥—É Claude Desktop:</Run>
                        <LineBreak/>
                        <Run x:Name="txtConfigPath" Text="%APPDATA%\Claude\claude_desktop_config.json"/>
                    </TextBlock>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- –¢–æ–≥–ª—ã (–∫–∞–∫ —É Nonica) -->
        <StackPanel Grid.Row="4" Margin="0,8,0,8">
            <Separator Margin="0,0,0,8"/>

            <ToggleButton x:Name="tglConnection" Style="{StaticResource ToggleSwitch}"
                          IsChecked="True" Margin="0,0,0,8"
                          Content="Enable Connection Revit with A.I. Desktop Apps."
                          Checked="TglConnection_Changed" Unchecked="TglConnection_Changed"/>

            <ToggleButton x:Name="tglEditTools" Style="{StaticResource ToggleSwitch}"
                          IsChecked="True" Margin="0,0,0,4"
                          Content="Enable A.I. Tools to Edit existing elements in Revit."
                          Checked="TglEditTools_Changed" Unchecked="TglEditTools_Changed"/>
        </StackPanel>

        <!-- –ö–Ω–æ–ø–∫–∏ -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="  Close  " Padding="16,6"
                    Click="BtnClose_Click"
                    Background="White" BorderBrush="#CCC"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="‚Ñπ" Foreground="#5B5FC7" FontSize="14" Margin="0,0,4,0"
                           VerticalAlignment="Center"/>
                <TextBlock Text="Important: Restart AI Desktop App (corner)."
                           Foreground="#5B5FC7" FontWeight="SemiBold" FontSize="11"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
